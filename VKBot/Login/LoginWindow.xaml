<UserControl x:Class="VKBot.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VKBot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="Stack" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Type AccessToken" FontSize="24"/>
            <TextBox Name="AccessToken"/>
            <TextBlock Text="Type UserID" FontSize="24"/>
            <TextBox Name="UserID"/>
            <Button Margin="8" Content="Login" Click="Button_Click"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Visibility="Collapsed" HorizontalAlignment="Center"  MinWidth="300">
            <TextBox VerticalAlignment="Center" Margin="8" Name="Username" Text=""/>
            <TextBox VerticalAlignment="Center" Margin="8" Name="Password" Text="" />
            <Button  VerticalAlignment="Center" Margin="8" Content="Login" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
