<UserControl x:Class="VKBot.PostSettings.PhotoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VKBot.PostSettings" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
              d:DesignWidth="800">
    <Grid>
        <Button Margin="8"  Padding="8" Click="Button_Click">
            <StackPanel  >
                <ui:Card >
                    <Image Margin="8" Name="Preview" Height="180" RenderOptions.BitmapScalingMode="Fant"/>
                </ui:Card>
                <ui:SymbolIcon Margin="0 8 0 0 " Name="Icon" Symbol="Add24"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
