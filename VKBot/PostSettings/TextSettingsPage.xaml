<UserControl x:Class="VKBot.PostSettings.TextSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VKBot.PostSettings" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="1">
            <Label Content="Variables" Margin="8" FontWeight="Bold" FontSize="24"/>
            <StackPanel x:Name="VariablesStack">
            </StackPanel>
            <Button Margin="8" Content="Add" Click="Button_Click"/>
            <ui:NavigationSeparator />

            <Label Content="Text Variants" Margin="8" FontWeight="Bold" FontSize="24"/>
            <StackPanel x:Name="TextVariantsStack">
            </StackPanel>
            <Button Margin="8" Content="Add" Click="Button_Click_1"/>
        </StackPanel>
        <ui:Snackbar Name="Snackbar1"/>
    </Grid>
</UserControl>
