<UserControl x:Class="VKBot.PostSettings.PhotoAlbumItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VKBot.PostSettings"
             mc:Ignorable="d"  VerticalAlignment="Top"
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid VerticalAlignment="Top">
        <Button VerticalAlignment="Top" Height="180" Margin="8" Click="Button_Click">
            <Grid VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>
                <TextBlock Name="Name" Margin="8" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="150" TextWrapping="Wrap"/>
                <Image Grid.Row="1" Name="Preview" MinHeight="100" MaxHeight="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>

